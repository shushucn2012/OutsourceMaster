<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/topbar_com" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/com_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_p_title"
                        style="@style/text_33318_style"
                        android:text="" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_p_type" />

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="项目类型" />

                    <TextView
                        android:id="@+id/tv_p_type"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_p_hangye" />

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="所属行业" />

                    <TextView
                        android:id="@+id/tv_p_hangye"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_p_week" />

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="期望周期" />

                    <TextView
                        android:id="@+id/tv_p_week"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/icon_p_createtime" />

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="创建时间" />

                    <TextView
                        android:id="@+id/tv_p_createtime"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="1dp"
                        android:src="@mipmap/icon_state" />

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="项目状态" />

                    <TextView
                        android:id="@+id/tv_p_state"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/hline_fill_top" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/com_white"
                android:orientation="vertical"
                android:paddingTop="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="项目经理" />

                    <TextView
                        android:id="@+id/tv_manager_state"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/text_99914_style"
                        android:layout_marginLeft="5dp"
                        android:text="联系方式" />

                    <TextView
                        android:id="@+id/tv_contact_phone"
                        style="@style/text_33314_style"
                        android:layout_marginLeft="10dp"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/com_white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_p_intro"
                        style="@style/text_33318_style"
                        android:text="项目需求描述" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="@dimen/com_border_margin"
                    android:layout_marginRight="@dimen/com_border_margin"
                    android:layout_marginTop="25dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_detail"
                        style="@style/text_33314_style"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>