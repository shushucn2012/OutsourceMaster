<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ly_msg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/text_33316_style"
            android:text="支付成功"
            android:textColor="@color/com_black"
            android:layout_marginBottom="10dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/tv_msg"
            style="@style/text_33316_style"
            android:text="您已成功报名了61区南湖儿童创意绘画游戏" />
    </LinearLayout>

    <View style="@style/hline_fill_top"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button_confirm"
            style="@style/button_white_style"
            android:textColor="@color/g333333"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="查看报名详情" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="fill_parent"
            android:background="@color/colorLine" />

        <Button
            android:id="@+id/button_cancel"
            style="@style/button_white_style"
            android:textColor="@color/g333333"
            android:layout_height="40dp"
            android:layout_weight="0.5"
            android:text="返回首页" />
    </LinearLayout>

</LinearLayout>