<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:id="@+id/area_top_space"
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="20dp" />

    <View
        style="@style/hline_fill_top"
        android:background="#f1f1f1"/>

    <LinearLayout
        android:id="@+id/area_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/com_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="24dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_p_title"
                style="@style/text_33316_style"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_solve"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:text="" />
            
            <TextView
                android:id="@+id/tv_solve"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:textSize="12sp"
                android:background="@drawable/rec_org_stroke_org_solid_corner2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#f4370b"
                android:text="解决方案"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="@dimen/com_border_margin"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_p_type" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="5dp"
                android:text="项目类型" />

            <TextView
                android:id="@+id/tv_p_type"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="@dimen/com_border_margin"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_p_hangye" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="5dp"
                android:text="所属行业" />

            <TextView
                android:id="@+id/tv_p_hangye"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="@dimen/com_border_margin"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_p_week" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="5dp"
                android:text="期望周期" />

            <TextView
                android:id="@+id/tv_p_week"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="@dimen/com_border_margin"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_p_createtime" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="5dp"
                android:text="创建时间" />

            <TextView
                android:id="@+id/tv_p_createtime"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/com_border_margin"
            android:layout_marginRight="@dimen/com_border_margin"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/icon_p_money" />

            <TextView
                style="@style/text_99914_style"
                android:layout_marginLeft="5dp"
                android:text="项目预算" />

            <TextView
                android:id="@+id/tv_p_money"
                style="@style/text_33314_style"
                android:layout_marginLeft="10dp"
                android:text="" />
        </LinearLayout>
    </LinearLayout>

    <View
       style="@style/hline_fill_top"
        android:background="#f1f1f1"/>

    <View
        android:layout_width="match_parent"
        android:background="@color/bg_color"
        android:layout_height="10dp" />

</LinearLayout>